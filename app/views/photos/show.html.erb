<%= link_to 'Previous photo', { action: "show", id: @photo.prev.id } %>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<%= link_to 'Next photo', { action: "show", id: @photo.next.id } %>
<br />
<figure>
  <caption> <%= @photo.caption %> </caption>
  <br />
  <img src=<%= @photo.url %> width=50% ></img>
</figure>

<% if @photo.comments.any? %>
  <h4>Comments</h4>
  <%= render @photo.comments %>
<% end %>

<h4>Add a comment:</h4>
<%= render "comments/form" %>

